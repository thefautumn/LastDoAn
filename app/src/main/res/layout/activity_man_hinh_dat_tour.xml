<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ManHinhDatTour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/radius_bottom"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBack_DatTour"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/image_back" />
            <TextView
                android:layout_marginLeft="100dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt tour" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="140dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bước 1: Đặt chỗ" />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_radius10_color_white_stroke_black"
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:orientation="vertical">


            <TextView
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sun world Ba Na Hills in Da Nang" />
            <TextView
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã tour: 44442424" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin tour" />

    <LinearLayout
        android:background="@drawable/stroke_black"
        android:layout_marginLeft="15dp"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa điểm: Đà Nẵng" />
        <TextView
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn vị tổ chức: Công ty ABCDE" />
    </LinearLayout>
    <TextView
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin hành khách" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit_radius10_color_white_stroke_black"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Email_datcho"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />
        <Button
            android:id="@+id/btn_themTT"
            android:textAllCaps="false"
            android:textColor="#1748F8"
            android:background="@null"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm" />
    </LinearLayout>
    <TextView
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yêu cầu đặc biệt" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit_radius10_color_white_stroke_black"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="" />
        <Button
            android:textAllCaps="false"
            android:textColor="#1748F8"
            android:background="@null"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="51dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/stroke_black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng vé"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="180dp"
                app:srcCompat="@drawable/icon_dau_tru" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/icon_dau_cong" />


        </LinearLayout>

        <LinearLayout
            android:background="@color/black"
            android:layout_width="370dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng giá tiền"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="175dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="165.000 VND"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/black"
            android:layout_width="370dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/next_thanh_toan"
            android:textAllCaps="false"
            android:background="@drawable/edit_button_mh_tim_kiem_tour"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Đến thanh toán" />

    </LinearLayout>


</LinearLayout>