<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DoiMatKhau">
    <LinearLayout
        android:background="#5671B6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/image_back" />

        <TextView
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu" />
    </LinearLayout>

    <TextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu cũ" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/radius8_stroke_black"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon_pass01" />
        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>
    <TextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu cũ" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/radius8_stroke_black"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon_pass01" />
        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>
    <TextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu cũ" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/radius8_stroke_black"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon_pass01" />
        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textAllCaps="false"
        android:background="@drawable/edit_button_login"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="Đổi mật khẩu" />

</LinearLayout>