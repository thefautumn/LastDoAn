<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ManHinhRegister">

    <LinearLayout
        android:background="#5671B6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_res_backhome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/image_back" />

        <TextView
            android:text="Đăng ký"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <EditText
        android:id="@+id/email"
        android:drawableStart="@drawable/icon_tai_khoan_mhc"
        android:paddingStart="5dp"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Email"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:background="@drawable/edit_text_input"

        android:layout_width="350dp"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/password"
        android:drawableStart="@drawable/icon_pass"
        android:paddingStart="5dp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:hint="Password"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:background="@drawable/edit_text_input"
        android:layout_width="350dp"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/repassword"
        android:drawableStart="@drawable/icon_pass"
        android:paddingStart="5dp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:hint="Re password"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:background="@drawable/edit_text_input"
        android:layout_width="350dp"
        android:layout_height="50dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btn_register"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Register"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/edit_button_login"
        android:layout_width="350dp"
        android:layout_height="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Đã có tài khoản?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:textAllCaps="false"
            android:id="@+id/next_dangky"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:text="Đăng nhập ngay"
            android:textSize="14dp"
            android:textColor="#1748F8"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>