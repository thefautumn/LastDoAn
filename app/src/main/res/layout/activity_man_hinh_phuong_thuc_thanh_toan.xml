<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ManHinhPhuongThucThanhToan">

    <LinearLayout
        android:background="#5671B6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_pttt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/image_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="Chọn phương thức thanh toán"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:text="Chuyển khoản ngân hàng"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit_radius5_stroke_black"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_vietcombank" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Vietcombank" />

        <Button
            android:id="@+id/btn_pttt_vietcombank"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#0038FF"
            android:background="@null"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Chọn" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit_radius5_stroke_black"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_techcombank" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Vietcombank" />

        <Button
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#0038FF"
            android:background="@null"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Chọn" />
    </LinearLayout>
    <TextView
        android:text="MoMo E-Wallet"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit_radius5_stroke_black"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/momo" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="MoMo E-Wallet" />

        <Button
            android:id="@+id/btn_pttt_momo"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#0038FF"
            android:background="@null"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Chọn" />
    </LinearLayout>
    <TextView
        android:text="Internet Banking"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit_radius5_stroke_black"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pay" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Thẻ ATM nội địa" />

        <Button
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#0038FF"
            android:background="@null"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Chọn" />
    </LinearLayout>
    <TextView
        android:text="Thẻ tín dụng"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit_radius5_stroke_black"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/the_tin_dung" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Credit/Debit Card/Installment" />

        <Button
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#0038FF"
            android:background="@null"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Chọn" />
    </LinearLayout>
    <TextView
        android:text="Thanh toán tại quầy"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit_radius5_stroke_black"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/order" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Credit/Debit Card/Installment" />

        <Button
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#0038FF"
            android:background="@null"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Chọn" />
    </LinearLayout>
</LinearLayout>