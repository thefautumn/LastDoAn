<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ManHinhThanhToan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/radius_bottom"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_backTT"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/image_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:text="Xác nhận thanh toán"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="Bước 2: Thanh toán"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_radius10_color_white_stroke_black"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Sun world Ba Na Hills in Da Nang"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="5dp"
                android:text="Mã tour: 44442424"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_radius10_color_white_stroke_black"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Chọn phương thức thanh toán" />

        <Button
            android:id="@+id/next_chon_phuong_thuc_thanh_toan"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:textColor="#0038FF"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:text="Chọn" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Coupons or Gift Voucher" />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_radius10_color_white_stroke_black"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon_voucher1" />

        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingStart="10dp"
            android:text="Mã giảm giá"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Button
            android:id="@+id/next_them_voucher"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:textColor="#0038FF"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:text="Thêm" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit_radius10_color_white_stroke_black"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:text="Tổng giá tiền"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="VND 165.000"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:text="Họ tên khách hàng"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Phạm Đình Khôi"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:text="Số điện thoại"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="01233444455"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>

        <Button
            android:id="@+id/btn_thanh_toan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/edit_button_login"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="32dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Thanh toán" />
    </LinearLayout>
</LinearLayout>